{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "npm --prefix ../common run build && npm run build && cross-env NODE_ENV=production node dist/index.js",
    "build:alone": "tsc -p tsconfig.json",
    "build": "npm --prefix ../common run build && tsc -p tsconfig.json",
    "dev": "concurrently --raw \"npm --prefix ../common run watch\" \"cross-env NODE_ENV=development tsx watch src/index.ts\"",
    "dev:alone": "cross-env NODE_ENV=development tsx --watch src/index.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
